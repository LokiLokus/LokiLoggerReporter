@{
    ViewData["Title"] = "Dashboard";
}
<div id="adminvue" class="row">

    <dashboard-card v-for="x in data" :color="getState(x)" :count="x.AllCount" :link="'/Table/' + x.Source" :message="x.Source"></dashboard-card>
    
    <div class="d-flex justify-content-center mb-3" v-if="!loaded">
        <b-spinner variant="primary" style="width: 30rem; height: 30rem;" label="Waitin" type="grow"></b-spinner>
    </div>
</div>


@section Scripts{
    <script src="/components/dashboard-card.js"></script>
    <script src="/js/adminvue.js"></script>
}